---


interface CardProp {
	title?: string;
    imgSrc?: string;
    description?: string;
}

const {
	title = '',
    imgSrc = '/public/dist-equilib.jpeg',
    description = 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Numquam aspernatur provident eveniet eligendi cumque consequatur tempore sint nisi sapiente. Iste beatae laboriosam iure molestias cum expedita architecto itaque quae rem.',
}: CardProp = Astro.props;

---

<a
  href="#"
  class="card preset-filled-surface-100-900 border-[1px] border-surface-200-800 card-hover divide-surface-200-800 block max-w-md divide-y overflow-hidden"
>
  {/* Header */}
  <header>
    <img src={imgSrc} class="h-48 w-full object-cover" alt="banner" />
  </header>
  {/* Article */}
  <article class="space-y-4 p-4">
    <div>
      <!-- <h2 class="h6">Announcements</h2> -->
      <h3 class="h3">{title}</h3>
    </div>
    <p class="opacity-60">
      {description}
    </p>
  </article>
  {/* Footer */}
