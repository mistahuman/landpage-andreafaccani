---
import '../styles/global.css'
import Card from '../components/Card.astro';
// Common Class Lists
const headerClasses = 'space-y-2 pb-2 border-b-2 border-surface-800-200';
const previewCardClasses = 'card bg-noise bg-surface-50-950 border-[1px] border-surface-200-800 flex justify-center items-center p-8';

---

<main>
	<!-- Sticky Header -->
	<header class="sticky top-0 z-50 bg-surface-50-950 shadow-xl">
		<div class="container mx-auto grid grid-cols-[auto_1fr_auto] items-center gap-10 p-4">
			<h1 class="h3">Andrea Faccani</h1>
			<p class="text-xs opacity-60"></p>
			<a href="https://skeleton.dev" target="_blank" class="btn preset-filled">Contattami</a>
		</div>
	</header>

	<!-- Page Contents -->
	<div class="container mx-auto space-y-4 px-4 py-20">
		<!-- -------------------------------------------------------- -->
		<!-- <header class={headerClasses}> -->
			<!-- <h2 class="h2">Fisioterapista a Domicilio</h2>
			<h2 class="h4">Lugo e Dintorni</h2> -->
		<!-- </header> -->
		<!-- -------------------------------------------------------- -->
		<section class="space-y-4 ">
			<!-- Hero Section -->
			<!-- Hero Section -->
			<section class="text-center py-20 bg-primary text-white rounded-lg shadow-lg">
				<h1 class="text-5xl font-bold">Benvenuto nello studio di fisioterapia</h1>
				<p class="text-lg mt-4">Recupera il tuo benessere con trattamenti personalizzati</p>
				<button class="btn btn-accent mt-6">Prenota una visita</button>
			  </section>
		  
			  <!-- Servizi -->
			  <section class="py-20">
				<h2 class="text-4xl font-semibold text-center text-primary">I nostri servizi</h2>
				<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
				  <div class="card shadow-lg p-6 rounded-xl">
					<h3 class="text-2xl font-bold">Terapia Manuale</h3>
					<p class="mt-2">Manipolazioni per alleviare il dolore e migliorare la mobilit√†.</p>
				  </div>
				  <div class="card shadow-lg p-6 rounded-xl">
					<h3 class="text-2xl font-bold">Riabilitazione Sportiva</h3>
					<p class="mt-2">Programmi personalizzati per il recupero degli atleti.</p>
				  </div>
				  <div class="card shadow-lg p-6 rounded-xl">
					<h3 class="text-2xl font-bold">Massoterapia</h3>
					<p class="mt-2">Massaggi terapeutici per ridurre tensioni e stress.</p>
				  </div>
				</div>
			  </section>
		  
			  <!-- Testimonianze -->
			  <section class="py-20 text-center bg-secondary text-white rounded-lg shadow-lg">
				<h2 class="text-4xl font-semibold">Cosa dicono i nostri pazienti</h2>
				<div class="mt-8">
				  <blockquote class="italic text-lg">"Servizio eccellente, ho recuperato velocemente!"</blockquote>
				  <p class="mt-2 font-semibold">- Marco R.</p>
				</div>
			  </section>
		  
			  <!-- Contatti -->
			  <section class="py-20 text-center">
				<h2 class="text-4xl font-semibold text-primary">Contattaci</h2>
				<p class="mt-4">Prenota un appuntamento o chiedi informazioni</p>
				<button class="btn btn-secondary mt-6">Contattaci ora</button>
			  </section>
		</section>
	</div>

</main>